<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/flogin"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:background="@drawable/retour"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.90"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:paddingTop="20dp"
        android:text="Signup "
        android:textColor="@color/bleufoncé"
        android:textSize="32dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="19dp"
        android:text="Nous avons besoin de quelque informations "
        android:textColor="#C611364D"
        android:textSize="18dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginStart="3dp"
        android:text="User Name"
        android:textColor="@color/bleufoncé"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/input"
        android:hint="Saisiez votre numero de telephone"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="48dp"
        android:paddingLeft="15dp"
        android:shadowColor="@color/black"

        android:shadowDx="-2"
        android:shadowDy="-2"
        android:textSize="15dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="3dp"
        android:text="Nom et Prenom"
        android:textColor="@color/bleufoncé"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        />

    <EditText

        android:layout_width="375dp"
        android:layout_height="61dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/input"
        android:hint="Saisisez votre nom et prenom"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="48dp"
        android:paddingLeft="10dp"

        android:shadowColor="@color/black"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="3dp"
        android:text="Numero de telephone "
        android:textColor="@color/bleufoncé"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        />

    <EditText
        android:layout_width="373dp"
        android:layout_height="61dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/input"
        android:hint="Saisisez votre nom et prenom"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="48dp"
        android:paddingLeft="15dp"

        android:shadowColor="@color/black"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="3dp"
        android:text="mot de passe "
        android:textColor="@color/bleufoncé"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="373dp"
        android:layout_height="61dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/input"
        android:hint="Saisisez votre mot de passe"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="48dp"
        android:paddingLeft="15dp"

        android:shadowColor="@color/black"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:textSize="15dp" />

        <Button
            android:id="@+id/suivant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bouton"
            android:padding="15dp"
            android:text="Suivant"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

</LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
